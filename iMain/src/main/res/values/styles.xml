<resources>

    <!-- application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_btn_bg_shape</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SignUpFormTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="SignUpFormInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/dp_48</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>


    </style>

    <style name="SignInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="PersonTileTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TileTrailingText">
        <item name="android:textColor">@color/color_gray_fifty</item>
    </style>

    <style name="SingleLineStyle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Dialog进入及退出动画 -->
    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_anim_exit</item>
    </style>

    <!--底部dialog-->
    <style name="BottomFragmentDialogWithAnim" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
    </style>
</resources>
