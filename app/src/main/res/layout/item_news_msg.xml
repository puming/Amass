<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72">

    <ImageView
        android:id="@+id/iv_news_item_icon"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_curriculum"
        tools:srcCompat="@mipmap/ic_curriculum" />

    <TextView
        android:id="@+id/tv_news_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="班级消息"
        app:layout_constraintStart_toEndOf="@+id/iv_news_item_icon"
        app:layout_constraintTop_toTopOf="@id/iv_news_item_icon" />

    <TextView
        android:id="@+id/tv_news_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="暂无消息"
        app:layout_constraintBottom_toBottomOf="@id/iv_news_item_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_news_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_news_item_title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_news_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="15:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_news_item_title"
        app:layout_constraintTop_toTopOf="@id/tv_news_item_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_news_item_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>