<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_navigation"
    app:startDestination="@id/taskDetailsFragment">
    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="com.pm.amass.mission.task.details.TaskDetailsFragment"
        android:label="task_details_fragment"
        tools:layout="@layout/task_details_fragment" >
        <action
            android:id="@+id/action_taskDetailsFragment_to_submitTaskFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/submitTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/submitTaskFragment"
        android:name="com.pm.amass.mission.task.submit.SubmitTaskFragment"
        android:label="do_task_fragment"
        tools:layout="@layout/submit_task_fragment" />

</navigation>